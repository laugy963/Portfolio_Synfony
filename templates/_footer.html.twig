<!-- Bouton retour en haut -->
<button id="backToTop" class="btn btn-primary position-fixed bottom-0 end-0 m-3 rounded-circle d-none d-flex align-items-center justify-content-center" style="z-index: 1000; width: 56px; height: 56px; padding:0;">
    <i class="fas fa-arrow-up" style="font-size:1.7rem;line-height:1;"></i>
</button>

<!-- Script pour le bouton retour en haut -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const backToTopButton = document.getElementById('backToTop');
    
    // Afficher/masquer le bouton selon le scroll
    window.addEventListener('scroll', function() {
        if (window.scrollY > 300) {
            backToTopButton.classList.remove('d-none');
        } else {
            backToTopButton.classList.add('d-none');
        }
    });
    
    // Action du bouton
    backToTopButton.addEventListener('click', function() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    });
});
</script>
