{% extends 'base.html.twig' %}

{% block title %}Connexion Administrateur{% endblock %}

{% block body %}
<body class="form-page">
    <header id="main_header" class="header">
        <h1 class="header-title">Connexion Administrateur</h1>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">Portfolio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                        </li>
                        {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_project_index') }}">Gestion Projets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <section id="main_section" class="form-section">
        {% if error %}
            <div class="alert alert-danger mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="alert alert-success mb-4">
                <i class="fas fa-user-check me-2"></i>
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}
                <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-danger ms-2">Se déconnecter</a>
            </div>
        {% else %}
            <form method="post" class="form-container">
                <div class="form-group">
                    <label for="username">
                        <i class="fas fa-envelope me-2"></i>Email
                    </label>
                    <input type="email" 
                           value="{{ last_username }}" 
                           name="_username" 
                           id="username" 
                           class="form-input" 
                           placeholder="admin@portfolio.com"
                           autocomplete="email" 
                           required 
                           autofocus>
                </div>

                <div class="form-group">
                    <label for="password">
                        <i class="fas fa-lock me-2"></i>Mot de passe
                    </label>
                    <div class="password-input-container">
                        <input type="password" 
                               name="_password" 
                               id="password" 
                               class="form-input password-input" 
                               autocomplete="current-password" 
                               required>
                        <button type="button" class="password-toggle-btn" onclick="togglePassword()" title="Afficher/Masquer le mot de passe">
                            <i class="fas fa-eye-slash" id="password-toggle-icon"></i>
                            <span class="password-toggle-fallback" id="password-toggle-fallback" style="display: none;">�</span>
                        </button>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-group">
                    <button type="submit" class="form-button">
                        <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                    </button>
                </div>
            </form>
        {% endif %}
    </section>

    <footer id="main_footer" class="footer">
        <div class="container text-center">
            <p>&copy; 2025 Portfolio. Tous droits réservés.</p>
        </div>
    </footer>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('password-toggle-icon');
            const toggleFallback = document.getElementById('password-toggle-fallback');
            
            if (passwordInput.type === 'password') {
                // Afficher le mot de passe
                passwordInput.type = 'text';
                // Icône œil ouvert (le mot de passe est visible)
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
                // Fallback emoji - œil ouvert
                if (toggleFallback) {
                    toggleFallback.textContent = '�️';
                }
            } else {
                // Masquer le mot de passe
                passwordInput.type = 'password';
                // Icône œil barré (le mot de passe est masqué)
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
                // Fallback emoji - œil fermé/caché
                if (toggleFallback) {
                    toggleFallback.textContent = '�';
                }
            }
        }

        // Vérification si Font Awesome est chargé
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.querySelector('.password-toggle-btn');
            const toggleIcon = document.getElementById('password-toggle-icon');
            const toggleFallback = document.getElementById('password-toggle-fallback');
            
            // Test si Font Awesome est disponible
            setTimeout(function() {
                const computedStyle = window.getComputedStyle(toggleIcon, '::before');
                if (computedStyle.content === 'none' || computedStyle.content === '""') {
                    // Font Awesome non disponible, utiliser le fallback
                    toggleIcon.style.display = 'none';
                    toggleFallback.style.display = 'inline';
                }
            }, 100);

            // Gestion du clavier
            if (toggleBtn) {
                toggleBtn.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        togglePassword();
                    }
                });
            }
        });
    </script>
</body>
{% endblock %}
