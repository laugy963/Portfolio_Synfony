{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="form-page">
    <!-- Barre de navigation en haut -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="{{ path('app_home') }}">
                <i class="fas fa-home me-2"></i>Portfolio
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">
                            <i class="fas fa-sign-in-alt me-1"></i>Connexion
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">
                            <i class="fas fa-user-plus me-1"></i>Inscription
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- En-tête avec sous-titre -->
    <header class="header">
        <div class="container text-center">
            <h1 class="header-title">Mot de passe oublié ?</h1>
        </div>
    </header>

    <section class="form-section">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>
                {{ flash_error }}
            </div>
        {% endfor %}

        {{ form_start(requestForm, {'attr': {'class': 'form-container'}}) }}
            <div class="registration-header mb-4">
                <h2 class="form-title">
                    <i class="fas fa-key me-2"></i>Réinitialisation
                </h2>
                <p class="form-subtitle">
                    Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </p>
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-envelope me-2"></i>Adresse email
                </label>
                {{ form_widget(requestForm.email, {
                    'attr': {
                        'class': 'form-input',
                        'placeholder': 'votre@email.com'
                    }
                }) }}
                {{ form_errors(requestForm.email) }}
            </div>

            <div class="form-group">
                <button type="submit" class="form-button">
                    <i class="fas fa-paper-plane me-2"></i>Envoyer le lien de réinitialisation
                </button>
            </div>

            <div class="form-footer">
                <p class="text-center">
                    Vous vous souvenez de votre mot de passe ? 
                    <a href="{{ path('app_login') }}" class="link-primary">Retour à la connexion</a>
                </p>
            </div>
        {{ form_end(requestForm) }}
    </section>

    <footer id="main_footer" class="footer">
        <div class="container text-center">
            <p>&copy; 2025 Portfolio. Tous droits réservés.</p>
        </div>
    </footer>
</div>
{% endblock %}
