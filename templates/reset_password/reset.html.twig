{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
<div class="container page-container content-fade-in">
    <!-- En-tête avec sous-titre -->
    <header class="text-center mb-5">
        <h1 class="h2 mb-3">Nouveau mot de passe</h1>
    </header>

    <div class="row justify-content-center">
        <div class="col-md-6">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger mb-4">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    {{ flash_error }}
                </div>
        {% endfor %}

        {{ form_start(resetForm, {'attr': {'class': 'form-container'}}) }}
            <div class="registration-header mb-4">
                <h2 class="form-title">
                    Réinitialisation
                </h2>
                <p class="form-subtitle">
                    Choisissez un nouveau mot de passe sécurisé pour votre compte.
                </p>
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-lock me-2"></i>Nouveau mot de passe
                </label>
                <div class="password-input-container">
                    {{ form_widget(resetForm.plainPassword.first, {
                        'attr': {
                            'class': 'form-input password-input',
                            'placeholder': 'Nouveau mot de passe',
                            'id': 'new-password'
                        }
                    }) }}
                    <button type="button" class="password-toggle-btn" onclick="togglePasswordField('new-password', this)" title="Afficher/Masquer le mot de passe">
                        <i class="fas fa-eye-slash"></i>
                    </button>
                </div>
                {{ form_errors(resetForm.plainPassword.first) }}
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-lock me-2"></i>Confirmer le mot de passe
                </label>
                <div class="password-input-container">
                    {{ form_widget(resetForm.plainPassword.second, {
                        'attr': {
                            'class': 'form-input password-input',
                            'placeholder': 'Confirmer le mot de passe',
                            'id': 'confirm-password'
                        }
                    }) }}
                    <button type="button" class="password-toggle-btn" onclick="togglePasswordField('confirm-password', this)" title="Afficher/Masquer le mot de passe">
                        <i class="fas fa-eye-slash"></i>
                    </button>
                </div>
                {{ form_errors(resetForm.plainPassword.second) }}
            </div>

            <div class="form-group">
                <button type="submit" class="form-button">
                    <i class="fas fa-save me-2"></i>Réinitialiser le mot de passe
                </button>
            </div>

            <div class="form-footer">
                <p class="text-center">
                    <a href="{{ path('app_login') }}" class="link-primary">
                        <i class="fas fa-arrow-left me-1"></i>Retour à la connexion
                    </a>
                </p>
            </div>
        {{ form_end(resetForm) }}
        </div>
    </div>
</div>

<script>
        function togglePasswordField(fieldId, button) {
            const passwordInput = document.getElementById(fieldId);
            const icon = button.querySelector('i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            }
        }
    </script>
</div>
{% endblock %}
