{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
<div class="form-page">
    <!-- Barre de navigation en haut -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="{{ path('app_home') }}">
                <i class="fas fa-home me-2"></i>Portfolio
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">
                            <i class="fas fa-sign-in-alt me-1"></i>Connexion
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- En-tête avec sous-titre -->
    <header class="header">
        <div class="container text-center">
            <h1 class="header-title">Nouveau mot de passe</h1>
        </div>
    </header>

    <section class="form-section">
        {{ form_start(resetForm, {'attr': {'class': 'form-container'}}) }}
            <div class="registration-header mb-4">
                <h2 class="form-title">
                    Réinitialisation
                </h2>
                <p class="form-subtitle">
                    Choisissez un nouveau mot de passe sécurisé pour votre compte.
                </p>
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-lock me-2"></i>Nouveau mot de passe
                </label>
                <div class="password-input-container">
                    {{ form_widget(resetForm.plainPassword.first, {
                        'attr': {
                            'class': 'form-input password-input',
                            'placeholder': 'Nouveau mot de passe',
                            'id': 'new-password'
                        }
                    }) }}
                    <button type="button" class="password-toggle-btn" onclick="togglePasswordField('new-password', this)" title="Afficher/Masquer le mot de passe">
                        <i class="fas fa-eye-slash"></i>
                    </button>
                </div>
                {{ form_errors(resetForm.plainPassword.first) }}
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-lock me-2"></i>Confirmer le mot de passe
                </label>
                <div class="password-input-container">
                    {{ form_widget(resetForm.plainPassword.second, {
                        'attr': {
                            'class': 'form-input password-input',
                            'placeholder': 'Confirmer le mot de passe',
                            'id': 'confirm-password'
                        }
                    }) }}
                    <button type="button" class="password-toggle-btn" onclick="togglePasswordField('confirm-password', this)" title="Afficher/Masquer le mot de passe">
                        <i class="fas fa-eye-slash"></i>
                    </button>
                </div>
                {{ form_errors(resetForm.plainPassword.second) }}
            </div>

            <div class="form-group">
                <button type="submit" class="form-button">
                    <i class="fas fa-save me-2"></i>Réinitialiser le mot de passe
                </button>
            </div>

            <div class="form-footer">
                <p class="text-center">
                    <a href="{{ path('app_login') }}" class="link-primary">
                        <i class="fas fa-arrow-left me-1"></i>Retour à la connexion
                    </a>
                </p>
            </div>
        {{ form_end(resetForm) }}
    </section>

    <footer id="main_footer" class="footer">
        <div class="container text-center">
            <p>&copy; 2025 Portfolio. Tous droits réservés.</p>
        </div>
    </footer>

    <script>
        function togglePasswordField(fieldId, button) {
            const passwordInput = document.getElementById(fieldId);
            const icon = button.querySelector('i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            }
        }
    </script>
</div>
{% endblock %}
